{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**", "shared/**", "migrations/**"]
      }
    },
    {
      "src": "client/**/*.tsx",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.ts"
    },
    {
      "src": "^/(.*\\.(js|css|jpg|jpeg|png|gif|ico|svg|woff2|woff|ttf|eot))$",
      "dest": "/client/dist/$1"
    },
    {
      "src": "^/(.*)",
      "dest": "/client/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "1"
  },
  "buildCommand": "pnpm run build",
  "installCommand": "pnpm install --frozen-lockfile"
}
